<Window x:Class="ConferenceClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConferenceClient"
        mc:Ignorable="d"
        Title="Конференция" Height="350" Width="525" Loaded="Window_Loaded" Closing="Window_Closing"
        ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="TextBoxName" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Margin="310,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191"/>
        <Button x:Name="ButtonConnectDisconnect" Content="Подключиться" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.197,0.012" Width="150" Height="30" Click="ButtonConnectDisconnect_Click"/>
        <ListBox x:Name="ListBoxChat" Margin="10,45,10,99"/>
        <TextBox x:Name="TextBoxMessage" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="83" KeyDown="TextBoxMessage_KeyDown"/>
        <Label Content="Имя пользователя:" HorizontalAlignment="Left" Margin="187,10,0,0" VerticalAlignment="Top" Height="30" Width="118"/>

    </Grid>
</Window>
